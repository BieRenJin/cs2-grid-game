#!/bin/sh

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo "${BLUE}üöÄ Running pre-push checks...${NC}"

# Build the project
echo "${YELLOW}üî® Building project...${NC}"
npm run build

if [ $? -ne 0 ]; then
  echo "${RED}‚ùå Build failed! Please fix build errors before pushing.${NC}"
  exit 1
fi

# Run full test suite
echo "${YELLOW}üß™ Running full test suite...${NC}"
npm test

if [ $? -ne 0 ]; then
  echo "${RED}‚ùå Tests failed! Please fix failing tests before pushing.${NC}"
  exit 1
fi

# Run extended RTP test (100k iterations)
echo "${YELLOW}üé∞ Running extended RTP test (100k iterations)...${NC}"
node -e "
const { runRTPTest } = require('./test-rtp-performance.js');
console.log('Testing RTP with 100,000 iterations...');
runRTPTest(100000, 1).then(result => {
  console.log('RTP:', result.rtp.toFixed(2) + '%');
  console.log('Win Frequency:', result.winFrequency.toFixed(2) + '%');
  console.log('Performance:', result.spinsPerSecond.toFixed(0) + ' spins/sec');
  
  if (result.rtp < 94 || result.rtp > 100) {
    console.log('‚ùå RTP out of acceptable range!');
    process.exit(1);
  } else {
    console.log('‚úÖ RTP is within acceptable range');
  }
}).catch(err => {
  console.error('RTP test failed:', err);
  process.exit(1);
});
"

if [ $? -ne 0 ]; then
  echo "${RED}‚ùå Extended RTP test failed!${NC}"
  exit 1
fi

echo "${GREEN}‚úÖ All pre-push checks passed!${NC}"
echo "${GREEN}üöÄ Pushing to remote repository...${NC}"